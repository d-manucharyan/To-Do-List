<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="./style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="/tasksStyle.css">
</head>

<body>
    <a id="home" href="http://localhost:3000">HOME</a>
    <div class="container">
        <div class="list">
            <h1 class="h2">To Do List</h1>
            <form action="/tasks" method="post" id="listForm">
                <input placeholder="add your task" id="task" name="task">
                <input id="add" type="submit">
            </form>

            <ul>
                <% tasks.forEach(task=> { %>
                    <li>
                        <span>
                            <%= task.content %>
                        </span>

                        <div class="buttons">
                            <a href="/tasks/edit/<%= task.id %>">Edit</a>
                            <form class="delBtn" method="post" action="/tasks/delete/<%=task.id%>">
                                <button>X</button>
                            </form>
                        </div>
                    </li>
                    <% }) %>
            </ul>

        </div>
    </div>
</body>

</html>